<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lmhgfkk.ui_actionbar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light"
            >
            <!--android:theme="@style/Theme.AppCompat"-->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Common_AB_Activity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            >

            <!--android:theme="@style/Theme.AppCompat"-->

            <!--<meta-data-->
                <!--android:name="android.support.PARENT_ACTIIVTY"-->
                <!--android:value=".MainActivity"/>-->
        </activity>
        <activity android:name=".Custom_AB_Activity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/CustomActionbarTheme"
            />
        <activity android:name=".Common_AB_Tab_Activity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/CustomActionbarTheme"
            />
        <activity android:name=".Common_AB_PTS_Activity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/CustomActionbarTheme"
            />
    </application>

</manifest>